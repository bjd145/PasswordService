<?xml version="1.0" encoding="utf-8"?>
<ServiceManifest Name="PasswordDBApiPkg"
                 Version="1.0.0"
                 xmlns="http://schemas.microsoft.com/2011/01/fabric"
                 xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ServiceTypes>
    <StatelessServiceType ServiceTypeName="PasswordDBApiType" UseImplicitHost="true" />
  </ServiceTypes>
  <CodePackage Name="Code" Version="1.0.0">
    <EntryPoint>
      <ContainerHost>
        <ImageName>bjd145.azurecr.io/devrepo/passworddb:latest</ImageName>
        <Commands>-DBServer 10.0.2.4 -DB {} -DBUser {} -DBPassword {}</Commands>
      </ContainerHost>
    </EntryPoint>
  </CodePackage>
  <ConfigPackage Name="Config" Version="1.0.0" />
  <Resources>
    <Endpoints>
      <Endpoint Name="PasswordDBApiTypeEndpoint" UriScheme="http" Port="81" Protocol="http"/>
    </Endpoints>
  </Resources>
</ServiceManifest>